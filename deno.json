{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@anitrend/request-client",
  "version": "0.1.2",
  "exports": "./packages/client/src/mod.ts",
  "lint": {
    "include": [
      "packages/"
    ],
    "exclude": [
      ".github/",
      "README.md",
      "build/",
      "coverage/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "packages/"
    ],
    "exclude": [
      ".github/",
      "README.md",
      "build/",
      "coverage/"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "check": "deno check packages/client/src/mod.ts",
    "test:unit": "deno test -P --coverage=coverage packages/**/*.test.ts",
    "test:spec": "deno test -P --coverage=coverage packages/**/*.spec.ts",
    "test:watch": "deno test -P --watch",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "coverage": "deno coverage coverage --lcov --output=coverage/lcov.info"
  },
  "permissions": {
    "default": {
      "net": true
    }
  },
  "test": {
    "include": [
      "spec/**/*.test.ts",
      "spec/**/*.spec.ts"
    ],
    "permissions": {
      "net": [
        "jsonplaceholder.typicode.com"
      ]
    }
  },
  "publish": {
    "include": [
      "packages/client/src/",
      "README.md",
      "LICENSE",
      "jsr.json",
      "deno.json"
    ]
  },
  "imports": {
    "@c4spar/mock-fetch": "jsr:@c4spar/mock-fetch@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}
